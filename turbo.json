{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": [
    "SUB_DOMAIN_COOKIE_DOMAIN",
    "BETTER_AUTH_URL",
    "BETTER_AUTH_SECRET",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "NODE_ENV",
    "DATABASE_URL"
  ],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "@bloom/db#build": {
      "outputs": ["dist/**"]
    },
    "web#build": {
      "dependsOn": ["@bloom/db#build"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "@bloom/db#dev": {
      "cache": false,
      "persistent": false
    },
    "api#dev": {
      "dependsOn": ["@bloom/db#dev"],
      "cache": false,
      "persistent": true
    },
    "worker#dev": {
      "dependsOn": ["@bloom/db#dev"],
      "cache": false,
      "persistent": true
    },
    "ws-server#dev": {
      "dependsOn": ["@bloom/db#dev"],
      "cache": false,
      "persistent": true
    }
  }
}
